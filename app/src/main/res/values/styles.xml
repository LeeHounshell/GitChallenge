<resources>

    <!-- Base application theme. -->
    <style name="MyAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- material design colors -->
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
        <item name="android:windowBackground">@color/colorPrimaryLight</item>
        <!-- window settings -->
        <item name="alertDialogTheme">@style/Theme.AppCompat.Dialog.Alert</item>
    </style>

    <style name="MyPrimaryTextViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_margin">@dimen/item_margin</item>
    </style>

    <style name="MySecondaryTextViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_margin">@dimen/item_margin</item>
    </style>

    <style name="TargetButton" parent="MyAppTheme">
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="colorControlHighlight">@color/buttonColorPressed</item>
        <item name="colorButtonNormal">@color/buttonColor</item>
    </style>

    <style name="ToolTipLayoutCustomStyle">
        <item name="ttlm_padding">25dip</item>
        <item name="ttlm_strokeColor">@color/tooltip_text_color</item>
        <item name="ttlm_backgroundColor">@color/secondary_text</item>
        <item name="ttlm_strokeWeight">2dip</item>
        <item name="ttlm_cornerRadius">8dip</item>
        <item name="ttlm_overlayStyle">@style/ToolTipOverlayCustomStyle</item>
        <item name="android:textAppearance">?android:attr/textAppearanceInverse</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ToolTipOverlayCustomStyle">
        <item name="android:color">@color/notification_background</item>
        <item name="ttlm_repeatCount">999</item>
        <item name="ttlm_duration">400</item>
    </style>

    <style name="PagerTitleStrip">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="AlbumImageStyle" parent="MyAppTheme">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:cropToPadding">false</item>
    </style>

</resources>
